<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="repairing_task_tree" model="ir.ui.view">
        <field name="name">carpoint.repairing.task.tree.view</field>
        <field name="model">carpoint.repairing.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rep_name"/>
                <field name="task_user_id"/>
                <field name="repairing_category"/> 
                <field name="repairing_desc"/>
                <field name="repairing_car"/>
                <field name="repairing_car_noplate"/>
                <field name="repairing_date"/>
            </tree>
        </field>
    </record>
    <record id="repairing_task_form" model="ir.ui.view">
        <field name="name">carpoint.repairing.task.form</field>
        <field name="model">carpoint.repairing.task</field>
        <field name="arch" type="xml">
            <form string="user_form">
            <!-- Header Section -->
                <header>
                    <field name="repairing_status" widget="statusbar" options="{'clickable':'1'}"/>
                    <!-- <button type="object" string="In Progress"/>
                    <button type="object" string="Done"/>
                    <button type="object" string="Review"/>
                    <button type="object" string="Close"/> -->
                </header>
            <!-- / Header Section -->
                <sheet>
                    <h1><field name="rep_name" nolabel="1"/></h1>
                    <group>
                        <group>
                            <field name="task_user_id"/>
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="repairing_category"/>
                        </group>
                        <group>
                            
                            <field name="repairing_car"/>
                            <field name="repairing_car_brand"/>
                            <field name="repairing_car_noplate"/> 
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="repairing_desc"/>
                                </group>
                            </page>
                            <page string="Date and Duration">
                                <group>
                                    <field name="repairing_date"/> 
                                </group>
                            </page>
                            
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids"></field>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="repairing_task_search" model="ir.ui.view">
        <field name="name">repairing.task.search</field>
        <field name="model">carpoint.repairing.task</field>
        <field name="arch" type="xml">
            <search string="Search...">
                <field name="repairing_category" />
                <field name="repairing_desc" />
                <field name="repairing_car" />
                <filter name="status_in_progress" string="In Progress" domain="[('repairing_status', '=', 'in_progress')]" />
                <filter name="status_done" string="Done" domain="[('repairing_status', '=', 'done')]" />
                <filter name="status_review" string="Review" domain="[('repairing_status', '=', 'review')]" />
                <filter name="status_close" string="Close" domain="[('repairing_status', '=', 'close')]" />
            </search>
        </field>
    </record>
</odoo>