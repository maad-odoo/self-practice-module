<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!-- ____________________________Tree View______________________________________ !-->
        <record id="carpoint_rental_task_tree" model="ir.ui.view">
            <field name="name">carpoint.rental.task.tree.view</field>
            <field name="model">carpoint.rental.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="task_uid"/>
                    <field name="task_user"/> 
                    <field name="task_DOS"/>
                </tree>
            </field>
        </record>

        <record id="increment_task_field_sequence" model="ir.sequence">
                <field name="name">Field Incrementation</field>
                <field name="code">increment_task_field</field>
                <field name="prefix">00</field>
                <field name="padding">3</field>
                <field name="company_id" eval="False"/>
        </record> 

<!-- form -->

    </data><record id="carpoint_rental_task_form" model="ir.ui.view">
            <field name="name">carpoint.rental.task.form</field>
            <field name="model">carpoint.rental.task</field>
            <field name="arch" type="xml">
                <form string="user_form">
                <!-- Header Section -->
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"/>            
                    </header>
                <!-- / Header Section -->
                    <sheet>
                        <group style="margin-top:30px">
                            <field name="task_user"/>
                        </group>
                        <group>
                            <field name="task_DOS"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record> 
</odoo>

